code = "shader_type canvas_item;

uniform vec4 pulse_color = vec4(0.0, 0.6, 1.0, 1.0); // Light blue color
uniform float pulse_speed : hint_range(0.0, 10.0) = 2.0;
uniform float circle_width : hint_range(0.0, 1.0) = 0.02;
uniform vec2 center_pos = vec2(0.5, 0.5); // Center of the screen
uniform float pulse_offset : hint_range(0.0, 100.0) = 0.0;

void fragment() {
    vec2 uv = FRAGCOORD.xy / SCREEN_PIXEL_SIZE;
    vec2 pulse_origin = center_pos * vec2(SCREEN_PIXEL_SIZE);

    float distance = length(uv - pulse_origin);
    float wave = sin((distance - pulse_offset * pulse_speed) * 10.0) * 0.5 + 0.5;

    float alpha = smoothstep(circle_width, circle_width * 0.5, abs(wave - 0.5) * 2.0);

    vec4 color = vec4(pulse_color.rgb, alpha);
    COLOR = color;
}
"
